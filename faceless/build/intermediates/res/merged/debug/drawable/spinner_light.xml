<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:state_enabled="false"
		android:drawable="@drawable/spinner_light_disabled" />
	<item
		android:state_pressed="true"
		android:drawable="@drawable/spinner_light_pressed" />
	<item
		android:state_pressed="false"
		android:state_focused="true"
		android:drawable="@drawable/spinner_light_focused" />
	<item
		android:drawable="@drawable/spinner_light_default" />
</selector>